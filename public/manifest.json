{
    "name": "My Extension",
    "version": "1.0",
    "manifest_version": 3,
    "description": "A Chrome extension",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}